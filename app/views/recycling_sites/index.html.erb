<h1>Listing recycling_sites</h1>

<table>
  <tr>
    <th>Site</th>
    <th>Location</th>
    <th>Street</th>
    <th>Town</th>
    <th>Longitude</th>
    <th>Latitude</th>
    <th>Facilities</th>
  </tr>

<% @recycling_sites.each do |recycling_site| %>
  <tr>
    <td><%=h recycling_site.site_id %></td>
    <td><%=h recycling_site.location %></td>
    <td><%=h recycling_site.street %></td>
    <td><%=h recycling_site.town %></td>
    <td><%=h recycling_site.longitude %></td>
    <td><%=h recycling_site.latitude %></td>
    <td><%=h recycling_site.facilities %></td>
    <td><%= link_to 'Show', recycling_site %></td>
    <td><%= link_to 'Edit', edit_recycling_site_path(recycling_site) %></td>
    <td><%= link_to 'Destroy', recycling_site, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

